
        /* EXACT DESIGN SYSTEM FROM split_screen_mockup.html */
        body {
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #1E1E1E;
            color: #F7F7F8;
            overflow: hidden;
        }
        
        /* Layout containers */
        .app-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        
        .nav-bar {
            height: 48px;
            background-color: #202123;
            border-bottom: 1px solid #2E2E2E;
            display: flex;
            align-items: center;
            padding: 0 24px;
            gap: 16px;
        }
        
        .nav-item {
            padding: 8px 16px;
            border-radius: 6px;
            color: #A3A3A3;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.2s ease;
        }
        
        .nav-item.active {
            color: #2E8AF6;
            background-color: #2A2B2D;
        }

        .nav-item:hover {
            color: #F7F7F8;
        }
        
        .content-area {
            flex: 1;
            display: flex;
            overflow: hidden;
        }
        
        .sidebar {
            width: 260px;
            background-color: #202123;
            border-right: 1px solid #2E2E2E;
            padding: 20px;
            overflow-y: auto;
            transition: all 0.3s ease;
        }

        .sidebar.file-explorer {
            transition: width 0.4s ease;
        }

        .sidebar.compressed {
            width: 60px;
            padding: 10px;
        }

        .sidebar.compressed .folder-name,
        .sidebar.compressed .file-name,
        .sidebar.compressed .doc-count,
        .sidebar.compressed h3,
        .sidebar.compressed input {
            display: none;
        }
        
        .main-area {
            flex: 1;
            display: flex;
            position: relative;
        }
        
        .main-content {
            flex: 1;
            padding: 24px;
            overflow-y: auto;
            transition: all 0.3s ease;
        }

        /* Document viewer specific */
        .document-viewer {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 0;
        }

        .doc-header {
            height: 48px;
            background-color: #202123;
            border-bottom: 1px solid #2E2E2E;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
        }

        .doc-controls {
            display: flex;
            gap: 8px;
        }

        .doc-btn {
            background: transparent;
            border: 1px solid #565869;
            color: #A3A3A3;
            padding: 6px 12px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.2s ease;
        }

        .doc-btn:hover {
            background-color: #4B4D5D;
            color: #F7F7F8;
            border-color: #2E8AF6;
        }

        .doc-content {
            flex: 1;
            background: white;
            color: black;
            padding: 40px 60px;
            overflow-y: auto;
            font-family: 'Times New Roman', serif;
            line-height: 1.6;
        }
        
        /* Chat panel - matches split_screen_mockup exactly */
        .chat-panel {
            width: 0;
            background-color: #202123;
            border-left: 2px solid #2E8AF6;
            overflow: hidden;
            transition: width 0.3s ease;
            display: flex;
            flex-direction: column;
        }
        
        .chat-panel.open {
            width: 50%;
        }

        .chat-panel.document-mode {
            width: 400px;
        }
        
        .chat-header {
            padding: 20px;
            border-bottom: 1px solid #2E2E2E;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .chat-info {
            padding: 16px 20px;
            background-color: #2A2B2D;
            border-bottom: 1px solid #2E2E2E;
            font-size: 12px;
            color: #A3A3A3;
        }

        .quick-actions {
            padding: 16px 20px;
            border-bottom: 1px solid #2E2E2E;
        }

        .quick-action {
            display: block;
            width: 100%;
            text-align: left;
            background: transparent;
            border: 1px solid #565869;
            color: #A3A3A3;
            padding: 10px 16px;
            margin-bottom: 8px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 13px;
            transition: all 0.2s ease;
        }

        .quick-action:hover {
            background-color: #4B4D5D;
            color: #F7F7F8;
            border-color: #2E8AF6;
        }
        
        .chat-messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }
        
        .message {
            margin-bottom: 16px;
            padding: 12px 16px;
            border-radius: 8px;
            font-size: 13px;
            line-height: 1.5;
        }
        
        .message.user {
            background-color: #40414F;
            border: 1px solid #565869;
            margin-left: 20%;
        }
        
        .message.assistant {
            background-color: #2A2B2D;
            border: 1px solid #2E2E2E;
            margin-right: 20%;
        }

        .citation {
            color: #2E8AF6;
            text-decoration: none;
            cursor: pointer;
            font-size: 12px;
        }

        .citation:hover {
            text-decoration: underline;
        }

        .add-to-report {
            display: inline-block;
            background-color: #10B981;
            color: white;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 12px;
            margin-top: 12px;
            cursor: pointer;
            opacity: 0;
            transition: all 0.2s ease;
        }

        .message:hover .add-to-report {
            opacity: 1;
        }

        .chat-input-area {
            padding: 16px 20px;
            border-top: 1px solid #2E2E2E;
        }

        .chat-input-box {
            background-color: #40414F;
            border: 1px solid #565869;
            border-radius: 8px;
            padding: 12px 16px;
            width: 100%;
            color: #ECECF1;
            font-size: 14px;
            resize: none;
        }
        
        .context-panel {
            width: 320px;
            background-color: #202123;
            border-left: 1px solid #2E2E2E;
            padding: 20px;
            overflow-y: auto;
            transition: width 0.3s ease;
        }
        
        .context-panel.compressed {
            width: 0;
            padding: 0;
            overflow: hidden;
        }
        
        .chat-input-container {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: #1E1E1E;
            border-top: 1px solid #2E2E2E;
            padding: 16px;
        }
        
        .chat-input {
            background-color: #40414F;
            border: 1px solid #565869;
            border-radius: 8px;
            padding: 12px 16px;
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            display: block;
            color: #ECECF1;
            font-size: 14px;
        }

        .chat-input:focus {
            outline: none;
            border-color: #2E8AF6;
        }
        
        /* IPO Calendar styling */
        .ipo-table {
            width: 100%;
            border-collapse: collapse;
            background-color: #2A2B2D;
            border-radius: 8px;
            overflow: hidden;
        }
        
        .ipo-table th {
            text-align: left;
            padding: 8px 12px;
            border-bottom: 1px solid #2E2E2E;
            color: #A3A3A3;
            font-size: 11px;
            text-transform: uppercase;
            background-color: #202123;
        }
        
        .ipo-table td {
            padding: 12px;
            border-bottom: 1px solid #2E2E2E;
            font-size: 13px;
        }

        .ipo-table tr:hover {
            background-color: rgba(46, 138, 246, 0.05);
        }
        
        .ticker-button {
            background-color: transparent;
            border: 1px solid #565869;
            color: #F7F7F8;
            padding: 4px 12px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 13px;
            transition: all 0.2s ease;
        }
        
        .ticker-button:hover {
            background-color: #4B4D5D;
            border-color: #2E8AF6;
        }

        /* File explorer */
        .search-box {
            width: 100%;
            background-color: #40414F;
            border: 1px solid #565869;
            border-radius: 6px;
            padding: 8px 12px;
            color: #ECECF1;
            font-size: 13px;
            margin-bottom: 20px;
        }

        .folder {
            margin-bottom: 8px;
        }

        .folder-header {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 12px;
            cursor: pointer;
            border-radius: 6px;
            transition: background-color 0.2s ease;
            font-size: 13px;
        }

        .folder-header:hover {
            background-color: #2A2B2D;
        }

        .folder-content {
            padding-left: 20px;
        }

        .file-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 12px;
            cursor: pointer;
            border-radius: 6px;
            transition: all 0.2s ease;
            font-size: 13px;
        }

        .file-item:hover {
            background-color: #2A2B2D;
            transform: translateX(4px);
        }

        .file-item.active {
            background-color: #2A2B2D;
            border-left: 3px solid #2E8AF6;
        }

        .doc-count {
            color: #A3A3A3;
            font-size: 11px;
        }
        
        .close-button {
            background: none;
            border: none;
            color: #A3A3A3;
            font-size: 20px;
            cursor: pointer;
            padding: 4px 8px;
            border-radius: 4px;
            transition: all 0.2s ease;
        }
        
        .close-button:hover {
            background-color: #4B4D5D;
            color: #F7F7F8;
        }
        
        /* Animation */
        .transition-overlay {
            position: fixed;
            top: 48px;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(30, 30, 30, 0.5);
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
        }
        
        .transition-overlay.active {
            opacity: 1;
        }

        /* View-specific styles */
        .view {
            display: none;
        }

        .view.active {
            display: flex;
            width: 100%;
        }

        /* Typography */
        h1 { margin: 0 0 8px 0; }
        h3 { margin: 0 0 16px 0; color: #F7F7F8; }
        p { margin: 0 0 4px 0; color: #A3A3A3; font-size: 13px; }

        /* Filters */
        select {
            width: 100%;
            padding: 8px;
            background: #40414F;
            border: 1px solid #565869;
            color: #ECECF1;
            border-radius: 6px;
            font-size: 13px;
            margin-bottom: 4px;
        }

        /* Highlight for citations */
        .highlight {
            background-color: rgba(255, 217, 61, 0.3);
            transition: background-color 2s ease;
        }

        /* Watchlist specific */
        .watchlist-item {
            padding: 16px;
            border-bottom: 1px solid #2E2E2E;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .watchlist-item:hover {
            background-color: #2A2B2D;
        }

        .status-badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 11px;
            margin-left: 8px;
        }

        .status-filed {
            background: rgba(46, 138, 246, 0.1);
            color: #2E8AF6;
        }

        .status-priced {
            background: rgba(16, 185, 129, 0.1);
            color: #10B981;
        }

        .status-warning {
            background: rgba(245, 158, 11, 0.1);
            color: #F59E0B;
        }

        /* Report builder */
        .report-section {
            padding: 16px;
            background: #2A2B2D;
            border-radius: 8px;
            margin-bottom: 12px;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
        }

        .section-title {
            font-weight: 500;
            font-size: 14px;
        }

        .section-status {
            font-size: 12px;
            color: #10B981;
        }
    